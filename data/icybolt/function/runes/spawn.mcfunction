# summon : Hitbox and main and linker
summon minecraft:interaction ~ ~ ~ {Tags: ['icybolt_rune', 'this_2', 'icybolt'], width: 1f, height:-1.5f}

# mount : linking entities to the main one
execute as @e[tag=this_1] run ride @s mount @e[tag=this_2, limit=1, sort=nearest]

# heat system init
scoreboard players set @e[tag=this_2] icybolt.runes.heat 0

# remove temporary tags
execute as @e[tag=this_1] run tag @s remove this_1
execute as @e[tag=this_2] run tag @s remove this_2
